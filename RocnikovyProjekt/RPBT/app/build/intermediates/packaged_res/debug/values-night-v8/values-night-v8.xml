<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="textColorDarkMode">#000000</color>
    <color name="textColorLightMode">#FFFFFF</color>
    <style name="Base.Theme.RPBT" parent="Theme.Material3.DayNight.NoActionBar">
        
        
        <item name="android:textColorPrimary">@color/textColorDarkMode</item>
        <item name="buttonStyle">@style/CustomButtonStyle</item>
    </style>
    <style name="CustomButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/textColorDarkMode</item>
        <item name="android:background">@drawable/button_next_prev_etc</item>
        <item name="android:backgroundTint">@null</item>
    </style>
    <style name="Theme.RPBT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        
    </style>
</resources>